networks:
  web-api-network:
    driver: bridge
services:
  db:
    build:
      context: C:\Projetos\Udemy\Web_Api
      dockerfile: db/Dockerfile
    command: mysqld --default-authentication-plugin=mysql_native_password
    environment:
      MYSQL_DATABASE: rest
      MYSQL_PASSWORD: root
      MYSQL_ROOT_PASSWORD: root
      MYSQL_USER: root
    image: web-api-db
    ports:
    - published: 3308
      target: 3306
    restart: always
  web-api:
    build:
      context: C:\Projetos\Udemy\Web_Api
      dockerfile: Web_Api/Dockerfile
    depends_on:
      db:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: web-api-api
    ports:
    - published: 44300
      target: 80
version: '3.4'